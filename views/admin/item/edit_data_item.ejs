<div class="tab-pane fade show active" id="editItem" role="tabpanel" aria-labelledby="editItem-tab">
    <div class="card shadow">
        <div class="card-body">
            <form action="/admin/item/<%= item._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Nama Tempat</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= item.title %>" placeholder="Masukkan nama tempat" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Gambar</label>
                        <input type="file" class="form-control py-1" id="image" name="image" multiple>
                    </div>
                    <div class="form-group">
                        <label for="category">Kategori</label>
                        <select class="form-control" name="categoryId">
                            <option value="<%= item.categoryId.id %>">--- <%= item.categoryId.name %> ---</option>
                            <% category.map(c => { %>
                            <option value="<%= c._id %>"><%= c.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="price">Harga</label>
                        <input type="number" class="form-control" id="price" value="<%= item.price %>" name="price" placeholder="Masukkan harga" required>
                    </div>
                    <div class="form-group">
                        <label for="city">Kota</label>
                        <input type="text" class="form-control" id="city" value="<%= item.city %>" name="city" placeholder="Masukkan kota" required>
                    </div>
                    <div class="form-group">
                        <label for="country">Negara</label>
                        <input type="text" class="form-control" id="country" value="<%= item.country %>" name="country" placeholder="Masukkan negara" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Deskripsi</label>
                        <textarea class="form-control" name="description" id="description" rows="3"><%= item.description %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Ubah Data</button>
            </form>
        </div>
    </div>
</div>