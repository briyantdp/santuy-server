<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" alt="Bukti Pembayaran" style="width: 100%; display: block;">
            </form>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableFacilities" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nama Tempat</th>
                                    <th>Total Biaya</th>
                                    <th>Nama Pemesan</th>
                                    <th>Nama Bank</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td><%= booking.itemId.title %></td>
                                        <td>$ <%= booking.totalPrice %></td>
                                        <td><%= booking.customerId.firstName %> <%= booking.customerId.lastName %></td>
                                        <td><%= booking.bankId.bankName %></td>
                                    </tr>
                            </tbody>
                        </table>
                </div>
                <% if(booking.payments.status === "Proses") { %>
                <div class="mt-3 d-flex justify-content-start">
                    <form action="/admin/booking/<%= booking._id %>/confirm?_method=PUT" method="post">
                        <button type="submit" class="btn btn-success mx-1">
                            <i class="fas fa-check mr-2"></i>
                            Terima
                        </button>
                    </form>
                    <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="post">
                        <button type="submit" class="btn btn-danger mx-1">
                            <i class="fas fa-times mr-2"></i>
                            Tolak
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<a href="/admin/booking" class="btn btn-primary">Kembali</a>